#:import WINDOW global_variables.WINDOW

<Menu>:
    orientation: 'vertical'
    spacing: WINDOW.width / 12
    canvas:
        Color:
            rgba: (.36, .17, .05, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'Cubes'
        color: (1, .5, 0, 1)
        canvas.before:
            Color:
                rgba: (.25, .09, .02, 1)
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        size_hint_y: 2
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (.25, .09, .02, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Info?'
            color: (1, .5, 0, 1)
    Button:
        text: 'constructor of treasure cave game'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
        on_press: root.delete_table()
    Button:
        text: 'Test dialog'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
        on_press: root.open_dialog()
    Button:
        text: 'Play'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
        on_press: root.play()
    Widget:
        canvas:
            Color:
                rgba: (.30, .12, .03, 1)
            Rectangle:
                size: self.size
                pos: self.pos




