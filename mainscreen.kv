#:import WINDOW global_variables.WINDOW

<Menu>:
    orientation: 'vertical'
    spacing: WINDOW.width / 12
    canvas:
        Color:
            rgba: (.36, .17, .05, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'Cubes'
        color: (1, .5, 0, 1)
        canvas.before:
            Color:
                rgba: (.25, .09, .02, 1)
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        size_hint_y: 2
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (.25, .09, .02, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'for test'
            color: (1, .5, 0, 1)
        BoxLayout:
            Label:
                text: 'Cols: '
                color: (1, .5, 0, 1)
            TextInput:
                id: playing_field_cols
                text: '5'
                background_color: (.30, .12, .03, 1)
                color: (1, .5, 0, 1)
        BoxLayout:
            Label:
                text: 'Rows: '
                color: (1, .5, 0, 1)
            TextInput:
                id: playing_field_rows
                text: '5'
                background_color: (.30, .12, .03, 1)
                color: (1, .5, 0, 1)
        BoxLayout:
            Label:
                text: 'Swipe: '
                color: (1, .5, 0, 1)
            TextInput:
                id: swipes
                text: '20'
                background_color: (.30, .12, .03, 1)
                color: (1, .5, 0, 1)
    Button:
        text: 'stub'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
    Button:
        text: 'stub'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
    Button:
        text: 'Play'
        color: (1, .5, 0, 1)
        background_normal:''
        background_color: (.30, .12, .03, 1)
        on_press: root.play()
    Widget:
        canvas:
            Color:
                rgba: (.30, .12, .03, 1)
            Rectangle:
                size: self.size
                pos: self.pos


<CubesGame>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: WINDOW.height - (rl.height + (WINDOW.width / 6) * 3)
            canvas:
                Color:
                    rgba: (.36, .17, .05, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout: # status board
                size_hint_y: None
                height: WINDOW.width / 6
                canvas:
                    Color:
                        rgba: (.30, .12, .03, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Button:
                    text: 'back'
                    color: (1, .5, 0, 1)
                    background_normal: ''
                    background_color: (.30, .12, .03, 1)
                    on_press: root.dismiss()
                Label:
                    text: 'Score: '
                    color: (1, .5, 0, 1)
                Label:
                    id: score_label
                    color: (1, .5, 0, 1)
                Label:
                    text: 'Swipe: '
                    color: (1, .5, 0, 1)
                Label:
                    id: swipes_label
                    color: (1, .5, 0, 1)
            Label:
                text: ''
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: rl.height + (WINDOW.width / 6) * 2
            BoxLayout: # status board
                size_hint_y: None
                height: WINDOW.width / 6
                canvas:
                    Color:
                        rgba: (.30, .12, .03, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    id: bonus_1
                    text: 'bonus_1'
                    color: (1, .5, 0, 1)
                Label:
                    text: 'bonus_2'
                    color: (1, .5, 0, 1)
                Label:
                    text: 'bonus_3'
                    color: (1, .5, 0, 1)
                Label:
                    text: 'bonus_4'
                    color: (1, .5, 0, 1)
            AnchorLayout:
                size_hint_y: None
                height: rl.height + WINDOW.width / 6
                canvas:
                    Color:
                        rgba: (.36, .17, .05, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                anchor_x: 'center'
                anchor_y: 'center'
                RelativeLayout:
                    id: rl
                    size_hint: None, None
                    StencilView: # field with cubes
                        id: playing_field
                        canvas:
                            Color:
                                rgba: (.30, .12, .03, 1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
        Widget:
            size_hint_y: None
            height: WINDOW.width / 6
            canvas:
                Color:
                    rgba: (.30, .12, .03, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos

<StartingPoint>:
    size_hint: None, None
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

<GameEnding>:
    size_hint: .8, .8
    BoxLayout:
        Widget:
        Label:
            id: lbl
            text: 'GG! Your score is: 0'
        Widget:

<Cube>:
    border: (0, 0, 0, 0)

