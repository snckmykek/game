<StartingPoint>:
    size_hint: None, None
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

<GameEnding>:
    size_hint: .8, .8
    BoxLayout:
        Widget:
        Label:
            id: lbl
            text: 'GG! Your score is: 0'
        Widget:

<Cube>:
    border: (0, 0, 0, 0)